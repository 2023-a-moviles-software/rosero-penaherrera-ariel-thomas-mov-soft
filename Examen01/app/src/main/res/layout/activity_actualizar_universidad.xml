<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActualizarUniversidad">

    <TextView
        android:id="@+id/tvTituloActualizacionUni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualizar una Universidad"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.036" />

    <Button
        android:id="@+id/btnActualizarUniversidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="ACTUALIZAR"
        app:layout_constraintTop_toBottomOf="@+id/etPromedioNotasActualizado"
        tools:layout_editor_absoluteX="141dp" />

    <EditText
        android:id="@+id/etNombreUniversidadActualizado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nombre"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloActualizacionUni"
        tools:inputType="text"
        tools:layout_editor_absoluteX="100dp" />

    <EditText
        android:id="@+id/etFechaCreacionActualizado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:hint="Fecha de fundación"
        android:inputType="date"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/etNombreUniversidadActualizado"
        tools:layout_editor_absoluteX="97dp" />

    <EditText
        android:id="@+id/etEsPublicaActualizado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:hint="¿Es Publica?"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/etFechaCreacionActualizado"
        tools:layout_editor_absoluteX="97dp" />

    <EditText
        android:id="@+id/etPromedioNotasActualizado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Promedio Notas"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/etEsPublicaActualizado"
        tools:layout_editor_absoluteX="97dp" />
</androidx.constraintlayout.widget.ConstraintLayout>