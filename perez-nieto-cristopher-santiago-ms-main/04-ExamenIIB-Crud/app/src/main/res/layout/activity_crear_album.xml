<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearAlbum">

    <TextView
        android:id="@+id/tv_crear_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="Crear un Album"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:inputType="text"
        android:id="@+id/et_crear_titulo_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Título"
        app:layout_constraintTop_toBottomOf="@+id/tv_crear_album"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"/>

    <EditText
        android:inputType="numberDecimal"
        android:id="@+id/et_crear_duracion_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_crear_titulo_album"
        android:hint="Duración"/>

    <EditText
        android:inputType="date"
        android:id="@+id/et_crear_fecha_lanzamiento_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_crear_duracion_album"
        android:hint="Fecha de Lanzamiento"/>

    <EditText
        android:inputType="text"
        android:id="@+id/et_crear_es_lanzamiento_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Es lanzamiento?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_crear_fecha_lanzamiento_album"/>

    <Button
        android:id="@+id/btn_crear_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_crear_es_lanzamiento_album"
        android:text="Crear"
        android:layout_marginTop="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>