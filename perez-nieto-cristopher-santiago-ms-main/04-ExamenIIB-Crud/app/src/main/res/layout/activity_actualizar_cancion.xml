<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActualizarCancion">

    <TextView
        android:id="@+id/tv_actualizar_cancion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualizar CanciÃ³n"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:inputType="text"
        android:id="@+id/et_nombre_cancion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nuevo Nombre"
        app:layout_constraintTop_toBottomOf="@+id/tv_actualizar_cancion"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"/>

    <EditText
        android:inputType="text"
        android:id="@+id/et_artista_cancion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_fecha_estreno_cancion"
        android:hint="Nuevo artista"/>

    <EditText
        android:inputType="date"
        android:id="@+id/et_fecha_estreno_cancion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_nombre_cancion"
        android:hint="Nueva fecha de estreno"/>


    <EditText
        android:inputType="text"
        android:id="@+id/et_es_estreno_cancion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Es estreno?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_artista_cancion"/>

    <Button
        android:id="@+id/btn_actualizar_cancion_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_es_estreno_cancion"
        android:text="Actualizar"
        android:layout_marginTop="24dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>